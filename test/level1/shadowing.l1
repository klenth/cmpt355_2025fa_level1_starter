/* shadowing.l1: globals and locals and locals shadowing globals
[[BEGIN TEST CASES]]
Output: <<At global scope
gi: 1, i: 2, j: 3, gx: 1.0, x: 2.0, y: 3.0

In f()
gi (global variable): 1
i (global int shadowed as local int): 102
j (global int shadowed as local double): 103.0
gx (global variable): 1.0
x (global double shadowed as local double): 102.0
y (global double shadowed as local string): one hundred three

At global scope again
gi: 1, i: 2, j: 3, gx: 1.0, x: 2.0, y: 3.0>>
[[END TEST CASES]]
*/

int gi = 1;
int i = 2;
int j = 3;

double gx = 1.0;
double x = 2.0;
double y = 3.0;

void f() {
    print();
    print("In f()");
    print("gi (global variable): ", gi);
    int i = 102;
    print("i (global int shadowed as local int): ", i);
    double j = 103;
    print("j (global int shadowed as local double): ", j);

    print("gx (global variable): ", gx);
    double x = 102;
    print("x (global double shadowed as local double): ", x);
    string y = "one hundred three";
    print("y (global double shadowed as local string): ", y);
}

print("At global scope");
print("gi: ", gi, ", i: ", i, ", j: ", j, ", gx: ", gx, ", x: ", x, ", y: ", y);

f();

print();
print("At global scope again");
// (this should print out the same thing that it did before)
print("gi: ", gi, ", i: ", i, ", j: ", j, ", gx: ", gx, ", x: ", x, ", y: ", y);
