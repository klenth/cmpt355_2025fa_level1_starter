// Not the most difficult conversion in the world
// ("parsec" is short for "parallax arcsecond")
double parallaxArcsecondsToParsecs(double as) {
    return 1 / as;
}

double parsecsToMiles(double pc) {
    return pc * 19173501441011.0;
}

void printResult(string name, double as, double pc, double mi) {
    print("Greetings ", name, "!");
    print("A parallax of ", as, " arcseconds corresponds to a distance of ", pc, " parsecs, which is ", mi / 1000 / 1000 / 1000 / 1000, " trillion miles.");
}

string inputName() {
    string name = input("What is your name? ");
    return name;
}

/* why you would use this when you could just use input() directly is beyond me... */
double inputDouble(string prompt) {
    double value = input(prompt);
    return value;
}

/* note that although your language is not required to support polymorphism of
 * functions (i.e. multiple functions with the same name), the JVM *does*, so
 * this function should not conflict with the void main(String[]) method.
 */
void main() {
    string name = inputName();
    double as = inputDouble("Parallax of how many arcseconds? ");
    double pc = parallaxArcsecondsToParsecs(as);
    double mi = parsecsToMiles(pc);

    printResult(name, as, pc, mi);
}

print("Preparing to invoke main()!");
main();
print("main() invoked!");
